<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.checkanxiety.formanxiety.PermissionFragment">

    <TextView
        android:id="@+id/tvPermissionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deteksi singkat ini berisi pertanyaan emosi dan kegiatan yang paling dominan anda pada hari ini. Apakah anda ingin melanjutkan?"
        android:textSize="16sp"
        android:textColor="@color/gray700"
        android:fontFamily="@font/inter_regular"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btnLanjutkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanjutkan"
        android:textSize="18sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/bluePrimary"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>