<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Warna saat di klik (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purplePrimary" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Warna saat di fokuskan (hover/hold) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blueSecondary" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Warna saat aktif (enabled) -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bluePrimary" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Warna saat nonaktif (disabled) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray500" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>
